{
  "devDependencies": {
    "decompress-zip": "git://github.com/szwacz/decompress-zip.git",
    "fs-jetpack": "0.4.x",
    "gulp": "3.x.x",
    "gulp-es6-module-transpiler": "0.1.x",
    "gulp-less": "1.x.x",
    "q": "1.x.x",
    "request": "2.x.x",
    "request-progress": "0.3.x",
    "yargs": "1.2.x"
  },
  "optionalDependencies": {
    "appdmg": "0.2.x"
  },
  "config": {
    "nodeWebkit": {
      "version": "0.10.1",
      "downloadUrls": {
        "osx": "http://dl.node-webkit.org/v{{version}}/node-webkit-v{{version}}-osx-ia32.zip",
        "linux": "http://dl.node-webkit.org/v{{version}}/node-webkit-v{{version}}-linux-x64.tar.gz",
        "windows": "http://dl.node-webkit.org/v{{version}}/node-webkit-v{{version}}-win-ia32.zip"
      }
    }
  },
  "scripts": {
    "download-runtime": "node ./scripts/download",
    "app-npm-install": "cd ./app  &&  npm install",
    "postinstall": "npm run download-runtime  &&  npm run app-npm-install",
    
    "build": "./node_modules/.bin/gulp --development",
    "build-test": "./node_modules/.bin/gulp --test",
    "build-release": "./node_modules/.bin/gulp --release",
    "watch": "./node_modules/.bin/gulp watch",
    
    "start": "npm run build  &&  node ./scripts/start",
    "test": " npm run build-test  &&  node ./scripts/start",
    "release": "npm run build-release  &&  node ./scripts/release"
  }
}
